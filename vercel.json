{
    "version": 2,
    "builds": [
        {
            "src": "myapp/wsgi.py",
            "use": "@vercel/python@3.1.30",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "myapp/wsgi.py"
        }
    ]
}